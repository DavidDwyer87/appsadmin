@model AppService.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<div class="wrapper">
    <div class="container" style="margin-top:-50px;">
        
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form" }))
        {
            @Html.AntiForgeryToken()
            <div style="float:left;">
                @Html.ValidationSummary()
            </div>
           
            <div style="float:right;">
                <h2>Register</h2>
                @Html.TextBoxFor(m => m.Name, new { placeholder = "Full name" })
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username" })
                @Html.TextBoxFor(m => m.email, new { placeholder = "Email" })
                @Html.PasswordFor(m => m.Password, new { placeholder = "password" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "password" })
                <input type="submit" value="Register" />
            </div>
           
        }
        </div>
        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>

       
