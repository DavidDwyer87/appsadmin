@using (Html.BeginForm("FileUpload", "Meal", FormMethod.Post, new { Id = "newProdform", enctype = "multipart/form-data" }))
{
    <div class="modal fade" id="modal-container-29791-new" role="dialog" aria-hidden="true" aria-labelledby="myModalLabel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" aria-hidden="true" type="button" data-dismiss="modal">
                        ×
                    </button>
                    <h4 class="modal-title" id="myModalLabelNewProduct" >
                        New Product
                    </h4>
                </div>
                <div class="modal-body">    
                    <div id="newmeals">                       
                        <table>   
                            <tr>
                                <td style="width:10px;">
                                    Product Name:
                                </td>
                                <td>                                           
                                    <input type="text" id="ProductName" name="ProductName" onblur="return validateProductName();" />                            
                                </td>
                                <td style="color:red;">
                                    <input id="proCat" name="ProductCatigory" type="text" value="" style="visibility:hidden;"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    small. Price:
                                </td>
                                <td>
                                    @Html.TextBox("smallprice",null, new {id="smallprice" })
                                </td>
                                <td id="sp" style="color:red;"></td>
                            </tr>                         
                            <tr>
                                <td>
                                    Med. Price:
                                </td>
                                <td>
                                    @Html.TextBox("medprice",null, new { id="medprice"})
                                </td>
                                <td id="mp" style="color:red;"></td>
                            </tr>
                            <tr>
                                <td>
                                    Large. Price:
                                </td>
                                <td>
                                    @Html.TextBox("largeprice",null, new {id="largeprice" })
                                </td>
                                <td id="lp" style="color:red;"></td>
                            </tr>
                            <tr>
                                <td>Image:</td>
                                <td>
                                    <input name="file" type="file" accept="image/*" id="file" onchange="return setpreview();" />
                                </td>
                                <td id="uimg" style="color:red;"></td>
                            </tr>
                            <tr>
                                <td>
                                    Description:
                                </td>
                                <td>
                                    @Html.TextArea("Description", new {id="description" })
                                </td>
                                <td id="descr" style="color:red;"></td>
                            </tr>
                        </table>
                                  
                        <img width="180" height="180" style="margin-left:400px;margin-top:-200px;" class="img-thumbnail" alt="Bootstrap Image Preview" id="preView"
                             src="~/Images/1450012368_Burger.png"/>                        
                    </div>                  
                </div>
                <div class="modal-footer">
                    <button id="btn-close" class="btn btn-default" type="button" data-dismiss="modal">
                        Close
                    </button>
                  
                    <a href="javascript:validateNewForm();" class="btn btn-primary">
                        Save
                    </a>
                </div>
            </div>
        </div>
    </div>
}
